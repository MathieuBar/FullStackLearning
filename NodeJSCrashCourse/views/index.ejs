<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.js Crash Course | <%= title %>
    </title>
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <nav>
        <ul>
            <li><a href="/">Homepage</a></li>
            <li><a href="/about">About page</a></li>
             <li><a href="/create">Create blog article</a></li>
        </ul>
    </nav>
    <div class="blogs content">
        <h2>All Blogs</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <h3 class="title">
                    <%= blog.title %>
                </h3>
                <p class="snippet">
                    <%= blog.snippet %>
                </p>
            <% }) %>
        <% } else { %>
            <p>There are no blogs article to display</p>
        <% } %>

    </div>
</body>

</html>